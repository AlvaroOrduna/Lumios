<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_header_height"
    android:background="?attr/colorPrimaryDark"
    android:paddingBottom="@dimen/keyline_8dp"
    android:paddingEnd="@dimen/keyline_16dp"
    android:paddingLeft="@dimen/keyline_16dp"
    android:paddingRight="@dimen/keyline_16dp"
    android:paddingStart="@dimen/keyline_16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:id="@+id/drawer_header_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_header_text_height"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/drawer_header_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/drawer_header_subhead"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>